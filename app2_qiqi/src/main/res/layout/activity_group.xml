<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.ncut.login.group.GroupActivity"
    android:background="@drawable/line007">

    <TextView
        android:id="@+id/tv_accName"
        android:layout_width="368dp"
        android:layout_height="24dp"
        android:text="帳簿名稱"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp" />

    <Button
        android:id="@+id/btn_group_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/group_background_fun"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rev_group" />

    <Button
        android:id="@+id/btn_buyList"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="34dp"
        android:layout_weight="1"
        android:background="@drawable/group_background_fun"
        android:drawableTop="@drawable/shopping_cart"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:text="購物清單"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_goDutch"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="34dp"
        android:layout_weight="1"
        android:background="@drawable/group_background_fun"
        android:drawableTop="@drawable/share"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:text="我要均攤"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_buying"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="34dp"
        android:layout_weight="1"
        android:background="@drawable/group_background_fun"
        android:drawableTop="@drawable/buying"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:text="團購專區"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/group_background_fun"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/group_background_sent2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="銷帳狀況"
        android:textColor="#000000"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="69dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rev_group"
        android:layout_width="369dp"
        android:layout_height="385dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="115dp"
        android:background="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_accName" />

</android.support.constraint.ConstraintLayout>
